<div class="row justify-content-center mt-5">
  <h1 class="text-center mb-4">Iniciar sesión</h1>
  <form class="col col-md-5 col-lg-3" action="/admin/login" method="post">
    <div class="mb-3">
      <input
        type="text"
        class="form-control"
        id="inputUser"
        name="usuario"
        placeholder="Nombre de usuario"
        required
      />
    </div>
    <div class="mb-3">
      <input
        type="password"
        class="form-control"
        id="inputPassword"
        name="password"
        placeholder="Ingrese su contraseña"
        required
      />
    </div>
    
    {{#if error}}
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        Usuario o contraseña incorrectos
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Close"
        ></button>
      </div>
    {{/if}}
    <div class="text-end">

    <button type="submit" class="btn btn-primary">Ingresar</button>
    </div>

  </form>
</div>